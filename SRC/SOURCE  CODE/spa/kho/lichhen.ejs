<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản Trị</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <h2>Chọn mục để quản lý:</h2>
        <ul>
          <li><a href="/admin/taikhoan">Tài Khoản</a></li>
          <li><a href="/admin/khachhang">Khách Hàng</a></li>
          <li><a href="/admin/nhanvien">Nhân Viên</a></li>
          <li><a href="/admin/loaisanpham">Loại Nhóm Sản Phẩm</a></li>
          <li><a href="/admin/sanpham">Sản Phẩm</a></li>
          <li><a href="/admin/lichhen">Lịch Hẹn</a></li>
          <li><a href="/admin/hoadon">Hóa Đơn</a></li>
          <li><a href="/admin/danhgia">Đánh Giá</a></li>
        </ul>
      </div>
      <div class="content">
        <!-- nội dung -->
        <h1>Danh Sách Lịch Hẹn</h1>
        <table class="table table-striped table-bordered">
          <thead class="thead-dark">
            <tr>
              <th>Khách Hàng</th>
              <th>Nhân Viên</th>
              <th>Sản Phẩm</th>
              <th>Ngày Hẹn</th>
              <th>Giờ Hẹn</th>
              <th>Số Lượng</th>
              <th>Trạng Thái</th>
              <th>Ghi Chú</th>
              <th>Hành Động</th>
            </tr>
          </thead>
          <tbody>
            <% lichhen.forEach(lichhen => { %>
            <tr>
              <td><%= lichhen.hotenkhachhang || 'Không xác định' %></td>
              <td><%= lichhen.hotennhanvien || 'Không xác định' %></td>
              <td><%= lichhen.tensanpham %></td>
              <td>
                <%= new Date(lichhen.ngayhen).toLocaleDateString('vi-VN') %>
              </td>
              <td><%= lichhen.giohen || 'Không rõ' %></td>
              <td><%= lichhen.soluong %></td>
              <td><%= lichhen.trangthai %></td>
              <td><%= lichhen.ghichu || '' %></td>
              <td>
                <form
                  action="/admin/lichhen/sualichhen/<%= lichhen.lichhen_id %>"
                  method="GET"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-primary btn-sm">
                    Sửa
                  </button>
                </form>
                <form
                  action="/admin/lichhen/xoa/<%= lichhen.lichhen_id %>"
                  method="POST"
                  style="display: inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm"
                    onclick="return confirm('Bạn có chắc muốn xóa lịch hẹn này?')"
                  >
                    Xóa
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <form action="/admin/lichhen/themlichhen" method="GET">
          <button type="submit">Thêm Lịch Hẹn</button>
        </form>
      </div>
    </div>
  </body>
</html>
