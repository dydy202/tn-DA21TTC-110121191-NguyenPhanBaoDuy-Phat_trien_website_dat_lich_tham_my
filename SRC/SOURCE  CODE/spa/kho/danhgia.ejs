<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản Trị</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <h2>Chọn mục để quản lý:</h2>
        <ul>
          <li><a href="/admin/taikhoan">Tài Khoản</a></li>
          <li><a href="/admin/khachhang">Khách Hàng</a></li>
          <li><a href="/admin/nhanvien">Nhân Viên</a></li>
          <li><a href="/admin/loaisanpham">Loại Nhóm Sản Phẩm</a></li>
          <li><a href="/admin/sanpham">Sản Phẩm</a></li>
          <li><a href="/admin/lichhen">Lịch Hẹn</a></li>
          <li><a href="/admin/hoadon">Hóa Đơn</a></li>
          <li><a href="/admin/danhgia">Đánh Giá</a></li>
        </ul>
      </div>
      <div class="content">
        <!-- nội dung --><h1>Danh Sách Đánh Giá</h1>
        <table>
            <thead>
                <tr>
                    <th>Khách Hàng</th>
                    <th>Dịch Vụ</th>
                    <th>Sản Phẩm</th>
                    <th>Hóa Đơn</th>
                    <th>Điểm Đánh Giá</th>
                    <th>Bình Luận</th>
                    <th>Ngày Đánh Giá</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                <% danhgia.forEach(item => { %>
                <tr>
                    <td><%= item.khachhang_id %></td>
                    <td><%= item.dichvu_id %></td>
                    <td><%= item.sanpham_id %></td>
                    <td><%= item.hoadon_id %></td>
                    <td><%= item.diemdanhgia %></td>
                    <td><%= item.binhluan %></td>
                    <td>
                      <%= new Date(item.ngaydanhgia).toLocaleDateString('vi-VN') %>
                    </td>
                    <td>
                        <form action="/admin/danhgia/suadanhgia/<%= item.danhgia_id %>" method="GET" style="display: inline">
                            <button type="submit">Sửa</button>
                        </form>
                        <form action="/admin/danhgia/xoa/<%= item.danhgia_id %>" method="POST" style="display: inline">
                            <button type="submit">Xóa</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <form action="/admin/danhgia/themdanhgia" method="GET">
            <button type="submit">Thêm Đánh Giá</button>
        </form>
    </div>
  </body>
</html>
