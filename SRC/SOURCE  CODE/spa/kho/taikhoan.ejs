<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản Trị - Tài Khoản</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="sidebar">
        <h2>Chọn mục để quản lý:</h2>
        <ul>
          <li><a href="/admin/taikhoan">Tài Khoản</a></li>
          <li><a href="/admin/khachhang">Khách Hàng</a></li>
          <li><a href="/admin/nhanvien">Nhân Viên</a></li>
          <li><a href="/admin/loaisanpham">Loại Nhóm Sản Phẩm</a></li>
          <li><a href="/admin/sanpham">Sản Phẩm</a></li>
          <li><a href="/admin/lichhen">Lịch Hẹn</a></li>
          <li><a href="/admin/hoadon">Hóa Đơn</a></li>
          <li><a href="/admin/danhgia">Đánh Giá</a></li>
        </ul>
      </div>
      <div class="content">
        <h1>Danh Sách Tài Khoản</h1>

        <table>
          <thead>
            <tr>
              <th>Tài Khoản ID</th>
              <th>Tên Tài Khoản</th>
              <th>Mật Khẩu</th>
              <th>Quyền</th>
            </tr>
          </thead>
          <tbody>
            <% taikhoan.forEach(tk => { %>
            <tr>
              <td><%= tk.taikhoan_id %></td>
              <td><%= tk.tendangnhap %></td>
              <td><%= tk.matkhau %></td>
              <td><%= tk.quyen %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
